#include <stdio.h>
struct student
{
    char name[50];
    int roll;
    float s1,s2,s3;
} s[50];

int main()
 {
    int i,n,total,result;
    float avg;
    printf("enter no of students:");
    scanf("%d",&n);
    printf("\n\nEnter information of students:\n");
    for (i = 0; i < n; ++i) {
        s[i].roll = i + 1;
        printf("\nFor roll number %d,\n", s[i].roll);
        printf("Enter first name: ");
        scanf("%s",s[i].name);
        printf("Enter 3 subject marks: ");
        scanf("%f%f%f", &s[i].s1,&s[i].s2,&s[i].s3);
    }

        printf("\n\nDisplaying Information:\n");
        for (i = 0; i < n; ++i) 
        {
        printf("\nRoll number: %d\n", i + 1);
        printf("First name:%s\n ",s[i].name);
        printf("Marks:s1=%1.f s2= %1.f s3=%1.f", s[i].s1,s[i].s2,s[i].s3);
       total=s[i].s1+s[i].s2+s[i].s3;
       avg=(s[i].s1+s[i].s2+s[i].s3)/3;

        printf("\ntotal:%d",total);
        printf("\navg=%1.f\n",avg);
            if(avg>40)
    {
        printf("PASS");
    }
    else
    {
        printf("FAIL");
    }
    
        printf("\n");
    }
    return 0;
}
